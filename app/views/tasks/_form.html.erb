<%= form_with(model: [ @project, @project.tasks.build ], local: true) do |f| %>
		<p>
			<%= f.label :description %><br/>
			<%= f.text_area :description %>
		</p>
		<p>
			<%= f.label :priority %><br/>
			<%= f.text_area :priority %><br/>
		</p>
		<p>
			<%= f.label :deadline %><br/>
			<%= f.text_area :deadline %><br/>
		</p>
		<p>
			<%= f.label :done %><br/>
			<%= f.text_area :done %><br/>
		</p>

		<p>
			<%= f.submit %>
		</p>

<% end %>